@model OWRM_Work_Routine_Manager.Models.USUARIO
@{
    Layout = null;
}

<script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


<style>

    #divCenter {
        display: flex;
        flex-flow: column;
        position: absolute;
        right: 32%;
        top: 27%;
        padding: 25px;
    }

    .btnEntrar {
        display: grid;
    }

    .logo {
        display: flex;
        place-content: center;
    }
</style>



@using (Html.BeginForm("Login", "Home", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">

        <div id="divCenter" class="form-horizontal col-lg-4 col-md-4 col-sm-4 col-xs-4">
            @Html.ValidationSummary(true)
            <div class="col-lg-12 col-md-12 logo">
                <img src="~/Content/Imagens/OWRM_thumbnail.png">
            </div>
            <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.LabelFor(model => model.LOGIN, new { @class = "control-label col-md-2" })
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    @Html.EditorFor(model => model.LOGIN, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.LabelFor(model => model.SENHA, new { @class = "control-label col-md-2" })
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    @Html.EditorFor(model => model.SENHA, "Password", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group col-md-12">
                <div class="col-md-12 btnEntrar">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
