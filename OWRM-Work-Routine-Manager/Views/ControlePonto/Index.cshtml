@model IEnumerable<OWRM_Work_Routine_Manager.Models.PontoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css/ControlePonto/Index.css")
@Scripts.Render("~/Scripts/ControlePonto/Index.js")

<div class="row">
    <div class="container-fluid">
        <div class="row text-calendario">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-calendario-baixo">
                <h5>Selecione o período a ser exibido</h5>
            </div>
        </div>
        @using (Html.BeginForm("FIltrado", "ControlePonto", FormMethod.Post))
        {

            <div class="row calendario">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <h6>Data início</h6>
                    @Html.TextBox("datepickerIni")
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <h6>Data fim</h6>
                    @Html.TextBox("datepickerFim")
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    <input type="submit" value="Filtrar" class="btn btn-success btnFiltrar" />
                </div>
            </div>
        }
        @if (Model == null)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 sem_dados">
                Não existem dados a serem exibidos :(
            </div>
        }
        else
        {
            if (Model.Count() == 0)
            {
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 sem_dados">
                    Não existem dados a serem exibidos :(
                </div>
            }
            else
            {<input type="button" id="btnExport" class="btn btn-primary btnExcel" onclick="ExportarExcel()" value=" Exportar para Excel" />

                @Html.Partial("_Pontos");
            }
        }
    </div>
</div>
